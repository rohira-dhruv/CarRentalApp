<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="195dp">

                <ImageView
                    android:id="@+id/carimage"
                    android:layout_width="match_parent"
                    android:layout_height="195dp"
                    android:background="@drawable/honda_city"
                    android:scaleType="centerInside" />

                <TextView
                    android:background="#1C9603"
                    android:textSize="12sp"
                    android:padding="1dp"
                    android:width="60dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:id="@+id/carType"
                    android:text="Compact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />

            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/carName"
                    android:textSize="18sp"
                    android:textColor="#1A1A1A"
                    android:text="Honda City"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="â‚¹"
                    android:textColor="#1A1A1A"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rupee"
                    android:layout_below="@id/carName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="500"
                    android:textColor="#1A1A1A"
                    android:layout_marginTop="10dp"
                    android:id="@+id/rate"
                    android:layout_below="@id/carName"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/rate2"
                    android:layout_below="@+id/carName"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="36dp"
                    android:text="/hour (Incl. GST)"
                    android:textColor="#1A1A1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_alignParentRight="true"
                    android:text="Rent"
                    android:id="@+id/rent"
                    android:backgroundTint="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <TextView
                android:background="#414141"
                android:layout_marginBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <TextView
                android:id="@+id/fuelType"
                android:layout_marginBottom="5dp"
                android:text="Diesel"
                android:textColor="#1A1A1A"
                android:padding="2dp"
                android:background="@drawable/textview_border_background"
                android:layout_width="50dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/seats"
                android:layout_marginBottom="5dp"
                android:text="Seats"
                android:textColor="#1A1A1A"
                android:padding="2dp"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/seatCapacity"
                android:layout_width="48dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/seatCapacity"
                    android:layout_marginBottom="5dp"
                    android:text="5"
                    android:textColor="#1A1A1A"
                    android:padding="2dp"
                    android:layout_width="15dp"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/driveType"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/driveType"
                    android:layout_marginBottom="5dp"
                    android:text="Automatic"
                    android:textColor="#1A1A1A"
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/fuelType"
                    android:layout_width="80dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>